{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node", "express"],
    "paths": {
      "@Utils/*": ["src/utils/*"],
      "@Models/*": ["src/models/*"],
      "@Controllers/*": ["src/controllers/*"],
      "@Services/*": ["src/services/*"],
      "@Routes/*": ["src/routes/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
